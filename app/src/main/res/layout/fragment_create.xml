<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background= "@mipmap/createscreen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uploadCharacter"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light">

            </ImageView>

            <TextView
                android:id="@+id/uploadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Character Above" />

            <EditText
                android:id="@+id/characterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:label="Name"
                android:hint="Name"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:hint="Name" />

            <EditText
                android:id="@+id/characterAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Age"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/characterSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Species"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/characterPersonality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Personality"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/characterFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Family"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/characterPowers"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text|textMultiLine"
                android:hint="Powers/Abilities"
                android:gravity="top"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/characterBios"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Background Story"
                android:inputType="text|textMultiLine"
                android:gravity="top"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/submit_character_button"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Create Character" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background= "@mipmap/createscreen"
    android:id= "@+id/fragment_viewoc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCharacter">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/currentDisplayCharacter"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="1">

            </ImageView>

            <EditText
                android:id="@+id/editCharName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:label="Name"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:hint="Name" />


            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Age"
                android:label="Age"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:hint="Name" />

            <EditText
                android:id="@+id/editSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Species"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="12sp"
              />

            <EditText
                android:id="@+id/editPersonality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Personality"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="12sp"
                 />

            <EditText
                android:id="@+id/editFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Family"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="12sp"
              />

            <EditText
                android:id="@+id/editPowers"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="Powers/Abilities"
                android:inputType="text|textMultiLine"
                android:textColor="@color/black"
                android:textSize="12sp"
                 />
            <EditText
                android:id="@+id/editBios"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="Background Story"
                android:inputType="text|textMultiLine"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="371dp"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@android:color/holo_purple"
                    android:src="@android:drawable/ic_menu_edit" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>